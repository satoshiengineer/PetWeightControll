<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/graybackground"
    tools:context="com.example.msi.petweightcontroll.SetNotificationTime">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/background"
        android:layout_marginTop="110dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dogdiet"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textSize = "30sp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="left|bottom"
        android:background="@drawable/tag"
        android:layout_marginLeft="21dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="提醒時間"
        android:id="@+id/textView2"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffff"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="191dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="完成"
        android:id="@+id/textView3"
        android:layout_gravity="right|bottom"
        android:textColor="#ffffff"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="191dp"
        android:onClick="finish" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetooth"
        android:layout_gravity="left|top"
        android:background="@drawable/circlebutton"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:onClick="previousSetBluetooth" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Petfile"
        android:layout_gravity="left|top"
        android:background="@drawable/circlebutton"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:onClick="previousPetfile" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pettime"
        android:layout_gravity="left|top"
        android:background="@drawable/circlebutton"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kal"
        android:layout_gravity="left|top"
        android:background="@drawable/circlebutton"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="50dp"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/dog"
        android:layout_gravity="left|top"
        android:background="@drawable/dog"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="第一餐:"
        android:id="@+id/One"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffff"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="161dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="第二餐:"
        android:id="@+id/Second"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffff"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="131dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="第三餐:"
        android:id="@+id/Three"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffff"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="101dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="morning"
        android:id="@+id/morning"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffff"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="161dp"
        android:onClick="SetMorning" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="afternoon"
        android:id="@+id/afternoon"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffff"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="131dp"
        android:onClick="SetAfternoon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="evening"
        android:id="@+id/evening"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffff"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="101dp"
        android:onClick="SetEvening" />

</FrameLayout>
