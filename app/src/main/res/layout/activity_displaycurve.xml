<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dogbackground"
    tools:context="com.example.msi.petweightcontroll.displaycurve">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/background"
        android:layout_marginTop="110dp">

    </LinearLayout>
    <TextView
        android:layout_width="200px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/meal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/meal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="200dp"/>
    <ImageButton
        android:layout_width="700px"
        android:layout_height="700px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/circle"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circle"
        android:layout_marginLeft="63dp"
        android:layout_marginBottom="80dp" />
    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/truebutton"
        android:layout_gravity="center_vertical"
        android:background="@drawable/truebutton"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="170dp" />
    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/falsebutton"
        android:layout_gravity="center_vertical"
        android:background="@drawable/falsebutton"
        android:layout_marginLeft="280dp" />
    <ImageButton
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="left|bottom"
        android:background="@drawable/tag"
        android:layout_marginLeft="21dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dog"
        android:layout_gravity="left|bottom"
        android:background="@drawable/dog"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="191dp"
        android:onClick="previousToDisplay" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/curve"
        android:layout_gravity="right|bottom"
        android:textColor="#ffffff"
        android:background="@drawable/curvetag"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="185dp"
        android:onClick="next" />
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="140dp"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="938px"
        android:layout_height="557px"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/curvepic"
        android:layout_marginBottom="9dp"/>

</FrameLayout>
