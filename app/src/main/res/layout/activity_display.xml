<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dogbackground"
    tools:context="com.example.msi.petweightcontroll.display">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/background"
        android:layout_marginTop="110dp">
    </LinearLayout>
    <TextView
        android:layout_width="200px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/meal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/meal"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="200dp"/>
    <ImageButton
        android:layout_width="700px"
        android:layout_height="700px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/circle"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circle"
        android:layout_marginLeft="63dp"
        android:layout_marginBottom="80dp" />
    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/truebutton"
        android:layout_gravity="center_vertical"
        android:background="@drawable/truebutton"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="170dp" />
    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/falsebutton"
        android:layout_gravity="center_vertical"
        android:background="@drawable/falsebutton"
        android:layout_marginLeft="280dp" />
    <ImageButton
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="left|bottom"
        android:background="@drawable/tag"
        android:layout_marginLeft="21dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dog"
        android:layout_gravity="left|bottom"
        android:background="@drawable/dog"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="191dp"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/curve"
        android:layout_gravity="right|bottom"
        android:textColor="#ffffff"
        android:background="@drawable/curvetag"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="185dp"
        android:onClick="nextToCurvepic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PBMI"
        android:id="@+id/PBMI"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#ffffff"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="150dp"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Meal/g"
        android:id="@+id/mealtag"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#ffffff"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="70dp"
        android:textSize="40sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weight"
            android:id="@+id/textView4"
            android:layout_marginBottom="160dp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginEnd="98dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView5"
            android:layout_marginTop="44dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginLeft="35dp"
            android:layout_alignParentStart="true" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_above="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="建議體重(成犬)"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView5"
            android:textColor="#ffffff"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4.7KG"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="kg"
        android:id="@+id/textView7"
        android:layout_gravity="right|bottom"
        android:textColor="#ffffff"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="27dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView11"
        android:layout_gravity="left|top" />
</FrameLayout>
